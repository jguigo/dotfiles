# ~/.config/kanshi/config

profile docked_home {
    output "WAM SPVC-3415-2 0x00000001" mode 2560x1440@60 position 0,0 scale 1
    output eDP-1 disable
}

profile docked_generic {
    output HDMI-A-1 position 0,0 scale 1
    output eDP-1 disable
}

profile mobile {
    output eDP-1 enable mode 1920x1080@60 position 0,0 scale 1.5
}
